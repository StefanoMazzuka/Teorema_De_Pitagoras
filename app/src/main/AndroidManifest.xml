<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stefanomazzuka.teorema.de.pitagoras">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="Stefano.Mazzuka.Teorema.de.Pitagoras.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="Stefano.Mazzuka.Teorema.de.Pitagoras.ActivityCatetos">
            <intent-filter>
                <action android:name="android.intent.action.ACTIVITYCATETOS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="Stefano.Mazzuka.Teorema.de.Pitagoras.ActivityHipotenusa">
            <intent-filter>
                <action android:name="android.intent.action.ACTIVITYHIPOTENUSA" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>